build-type:          Simple
-- extra-source-files:  CHANGELOG.md

common common-default-extensions
  default-language:    Haskell2010
  default-extensions:
    DeriveAnyClass
    DeriveGeneric
    DerivingVia
    FlexibleContexts
    FlexibleInstances
    GADTs
    GeneralizedNewtypeDeriving
    InstanceSigs
    LambdaCase
    MultiParamTypeClasses
    MultiWayIf
    NamedFieldPuns
    OverloadedStrings
    PackageImports
    PatternSynonyms
    RecordWildCards
    ScopedTypeVariables
    StrictData
    TupleSections
    TypeApplications
    ViewPatterns

library
  import: common-default-extensions
  hs-source-dirs: src
  ghc-options:
    -O2
    -Wall
  exposed-modules:
    Recycle
    Recycle.API
    Recycle.AppM
    Recycle.Class
    Recycle.Types
    Recycle.Types.Error
    Recycle.Utils
  build-depends:
      base >=4.7 && <5

      -- data
    , generic-lens
    , text

      -- effects
    , capability
    , transformers
    , mtl

      -- network
    , servant
    , servant-client
    , http-client
    , http-client-tls
    , aeson
    , aeson-extra
    , deriving-aeson
    , http-api-data
    , iso639
    , sop-core
    , text
    , time
    , containers

      -- logging
    , co-log
    , co-log-core

executable recycle
  main-is:             Main.hs
  ghc-options:
    -O2
    -Wall
    -threaded
    -rtsopts
    -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , recycle

test-suite recycle-test
  import: common-default-extensions
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: test
  ghc-options:
    -threaded
    -rtsopts
    -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , recycle
    , hspec
    , QuickCheck
    , aeson
    , file-embed
    , bytestring
    , aeson-extra
    , containers
    , text